<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống
        " Height="212" Width="431">
    <Grid Margin="0,0,10,15">

        <Label Content="_Password:"
               Target="{Binding ElementName=txtPassword}"
               
               HorizontalAlignment="Left" Margin="33,75,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="111,79,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="54,125,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="142,125,0,0" VerticalAlignment="Top" Click="btnThoat_Click" Width="60"/>
        <Label Content="_Username"
               Target="{Binding ElementName=txtUserName}"
               
               
               HorizontalAlignment="Left" Margin="33,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="111,44,0,0" TextWrapping="Wrap" Text="My user name" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
